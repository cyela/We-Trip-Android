<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeChat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble1">

    <TextView
        android:id="@+id/tvCUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:maxEms="12"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:targetApi="lollipop" />

    <ImageView
        android:id="@+id/imgCPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/tvCUser"
        android:layout_below="@+id/tvCUser"
        android:gravity="center"
        android:maxEms="12"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/noimage" />

    <TextView
        android:id="@+id/tvCMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgCPic"
        android:layout_below="@+id/tvCUser"
        android:layout_marginStart="12dp"
        android:maxEms="12"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/tvCtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:maxEms="12"
        android:text="TextView"
        android:layout_below="@+id/tvCMsg"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvCPtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxEms="12"
        android:text="TextView"
        android:layout_below="@+id/imgCPic"
        android:layout_alignParentEnd="true" />
</RelativeLayout>