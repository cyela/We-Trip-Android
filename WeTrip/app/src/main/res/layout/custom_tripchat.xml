<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circuleChatpic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:src="@drawable/noimage"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tvTripTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circuleChatpic"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/circuleChatpic"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/tripAddPeople"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/circuleChatpic"
        android:layout_marginEnd="30dp"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/sym_contact_card" />


</RelativeLayout>